            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_season_sale"
                android:layout_margin="16dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/ic_sale"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star"
                    android:tint="#FF6A00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Season Sale -->
                <TextView
                    android:id="@+id/tvSeason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Season Sale"
                    android:textStyle="bold"
                    android:textColor="#FF6A00"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/ic_sale"
                    app:layout_constraintTop_toTopOf="@id/ic_sale" />

                <!-- Discount -->
                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up to 40% Off"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/ic_sale"
                    app:layout_constraintTop_toBottomOf="@id/ic_sale" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On selected sports equipment"
                    android:textColor="#6E6E6E"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tvDiscount"
                    app:layout_constraintTop_toBottomOf="@id/tvDiscount" />

                <!-- Button -->
                <Button
                    android:id="@+id/btn_banner_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Shop Now"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_shop_now"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- Categories header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

